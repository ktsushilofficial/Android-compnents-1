<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiffComponents.DilogAlertActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/dialogActivitybtn1"
        android:text="Call Simple Dialog"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialogActivitybtn1"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/dialogActivitytext1"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_below="@id/dialogActivitytext1"
        android:id="@+id/dialogActivitybtn2"
        android:text="Callback Simple Dialog"></Button>

</RelativeLayout>